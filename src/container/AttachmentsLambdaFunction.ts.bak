import { Category } from 'pip-services-runtime-node';
import { ComponentDescriptor } from 'pip-services-runtime-node';
import { ComponentSet } from 'pip-services-runtime-node';
import { LambdaFunction } from 'pip-services-runtime-node';

import { AttachmentsMicroservice } from '../run/AttachmentsMicroservice';
import { IAttachmentsBusinessLogic } from '../logic/IAttachmentsBusinessLogic';

export class AttachmentsLambdaFunction extends LambdaFunction {
    private _logic: IAttachmentsBusinessLogic;

    constructor() {
        super(new AttachmentsMicroservice());
    }

    public link(components: ComponentSet) {
		this._logic = <IAttachmentsBusinessLogic>components.getOneOptional(
			new ComponentDescriptor(Category.BusinessLogic, "pip-services-attachments", "*", "*")
		);

        super.link(components);        

        this.registerCommands(this._logic.getCommands());
    }
    
}